<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StockViewer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/gray_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_900</item>
        <item name="colorSecondaryVariant">@color/gray_800</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout.PrimarySurface">
        <item name="tabMode">scrollable</item>
        <item name="tabIndicator">@null</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabTextColor">@color/gray_400</item>
        <item name="tabSelectedTextColor">?attr/colorSecondary</item>
    </style>

    <style name="StockChartChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">12dp</item>
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>
        <item name="rippleColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="chipStartPadding">10dp</item>
        <item name="chipMinHeight">48dp</item>
        <item name="chipEndPadding">10dp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSizeBig</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsMenuTitleTextAppearance" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/textSizeSettingsTitle</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>